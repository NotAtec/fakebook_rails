<section>
  <div class="columns is-centered">
    <div class="column is-two-thirds">
      <h1 class="title"><%= @user.full_name %>'s Friends</h1>
      <% if @friends.nil? %>
        <p><%= @user.full_name %> has no friends yet :(... Do you want to be their friend?</p>
      <% else %>
        <div class="request-grid">
          <% @friends.each do |user| %>
            <% if user != @user %>
              <div class="card">
                <div class="card-content">
                  <div class="media">
                    <div class="media-left">
                      <figure class="image is-48x48">
                        <!-- add procedural grabber when gravatar -->
                        <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder Avatar">
                      </figure>
                    </div>
                    <div class="media-content">
                      <p class="title is-4"><%= user.full_name %></p>
                      <p class="subtitle is-6"><%= link_to "Profile", user_path(user) %></p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>