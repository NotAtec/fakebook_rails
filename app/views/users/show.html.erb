<section>
  <div class="columns is-centered">
    <div class="column is-two-thirds">
      <div class="level">
        <div class="level-left">
          <div class="level-item">
            <figure class="image is-128x128 ">
              <!-- add procedural grabber when gravatar -->
              <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder Avatar" class="is-rounded">
            </figure>
          </div>
          <div class="level-item">
            <h1 class="title"><%= @user.full_name %></h1>
          </div>
        </div>
        <div class="level-right">
          <% if current_user == @user %>
            <div class="level-item">
              <%= button_to "Edit Profile", edit_user_path(current_user), method: :get, class: "button is-info"%>
            </div>
          <% end %>
        </div>
      </div>
      <p><%= @user.bio.nil? ? "This user has no bio yet" : @user.bio%></p>
      <br>
      <h2 class="subtitle">Posts</h2>
      <p>User's Posts..</p>

      <hr>
      <%= link_to user_friends_path(@user) do %>
        <p><%= @user.full_name %>'s Friends</p>
      <% end %>
      <p><%= @user.full_name %>'s liked posts</p>
    </div>
    
  </div>
</section>