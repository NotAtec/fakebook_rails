<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-one-third">
        <h1 class="title">Change your password</h1>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="field">
            <div class="control">
              <%= f.input :password,
                          label: "New password",
                          wrapper: false,
                          required: true,
                          autofocus: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { class: "input", autocomplete: "new-password" },
                          label_html: { class: "label" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
                <%= f.input :password_confirmation,
                            label: "Confirm your new password",
                            wrapper: false,
                            required: true,
                            input_html: { class: "input", autocomplete: "new-password" },
                            label_html: { class: "label" } %>
            </div>
          </div>
          <%= f.button :submit, "Change my password", class: "button is-primary"%>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>