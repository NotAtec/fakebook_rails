<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-one-third">
        <h1 class="title ">Forgot your password?</h1>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="field">
            <div class="control">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          wrapper: false,
                          input_html: { class: "input", autocomplete: "email" },
                          label_html: { class: "label", autocomplete: "email" } %>
            </div>
          </div>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
