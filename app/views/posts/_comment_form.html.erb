<%= simple_form_for(comment) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :body, label: "What do you have to say?", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, required: true %>
  </div>
</div>
<%= f.input :post_id, as: :hidden, input_html: {value: @post.id}, wrapper: false%>
<%= f.button :submit, class: "button is-info" %>
<% end %>
