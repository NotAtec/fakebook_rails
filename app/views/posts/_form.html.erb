<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %> <!-- this will render the errors -->
  <h1 class="is-size-3"><strong>Text Post</strong></h1>
  <div class="field">
    <div class="control">
      <%= f.input :title,
                  label: "Title:",
                  input_html: { class: "input" },
                  wrapper: false,
                  label_html: { class: "label" },
                  placeholder: "Put in a fancy title!",
                  autofocus: true,
                  required: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :body,
                  label: "Body:",
                  input_html: { class: "textarea" },
                  wrapper: false,
                  label_html: { class: "label" },
                  placeholder: "Write your post here!",
                  required: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.button :submit, class: "button is-primary" %>
    </div>
  </div>
<% end %>